{
  "name": "micro-frontend-example",
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "version": "1.0.0",
  "description": "Modern Micro-Frontend Architecture Example built with React, Lerna Monorepo, Nx task orchestration, and Rspack ultra-fast bundler",
  "main": "index.js",
  "scripts": {
    "start": "nx run-many --target=dev --parallel=3",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "preview": "nx run-many --target=preview --all",
    "reset": "nx reset",
    "graph": "nx graph"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oburakergen/micro-frontend.git"
  },
  "keywords": [
    "react",
    "lerna",
    "nx",
    "rspack"
  ],
  "author": "burak ERGEN",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oburakergen/micro-frontend/issues"
  },
  "homepage": "https://github.com/oburakergen/micro-frontend#readme",
  "dependencies": {
    "@module-federation/enhanced": "^0.21.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "7.2.9",
    "react-router-dom": "6.10.0"
  },
  "devDependencies": {
    "@module-federation/vite": "^1.9.2",
    "@vitejs/plugin-react": "^4.7.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "lerna": "^9.0.3",
    "nx": "^22.1.3",
    "typescript": "^5.3.0",
    "vite": "^6.3.5"
  }
}
